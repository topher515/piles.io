<html>
    <head>
        <title>Manage {{pile.domain}} Pile</title>
        <link rel="stylesheet" type="text/css" href="http://{{CONTENT_DOMAIN}}/static/css/bootstrap.min.css" />
        
        <script type="text/template" id="settings-template">
            <div class="settings">
                <div class="bg">
                    <img src="http://{{CONTENT_DOMAIN}}/static/img/globe.png" />
                    <div class="indicator stop"></div>
                </div>
                <div class="passform input-append">
                    <input class="span2" id="appendedPrependedInput" size="16" type="text">
                    <button class="btn" type="button">Set Password</button>
                </div>
                <div class="descriptor">
                    <p></p>
                </div>
            </div>
        </script>
        
        <script type="text/template" id="file-row-saved">
            <tr>
                <td><%= name %></td><td><%= type %></td><td><%= size %></td><td><div class="trash"></div></td>
            </tr>
        </script>
        
        
    </head>
    <body>
        <h1>Manage {{pile.domain}} Pile</h1>
        
        <div id="uploaded">
			<h2>Inbox</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th><th>Type</th><th>Size</th><th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        
        <div id="saved">
			<h2>Saved Files</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th><th>Type</th><th>Size</th><th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        
        
        <!-- Scripts -->
        <script src="http://{{CONTENT_DOMAIN}}/static/js/jquery-1.7.1.min.js"></script>
        <script src="http://{{CONTENT_DOMAIN}}/static/js/jquery-ui.min.js"></script>
        <script src="http://{{CONTENT_DOMAIN}}/static/js/bootstrap.js"></script>
        <script src="http://{{CONTENT_DOMAIN}}/static/js/jquery.fileupload.js"></script>
        <script src="http://{{CONTENT_DOMAIN}}/static/js/underscore.js"></script>
        <script src="http://{{CONTENT_DOMAIN}}/static/js/backbone.js"></script>
        <script src="http://{{CONTENT_DOMAIN}}/static/js/piles.lib.js"></script>
        <script src="http://{{CONTENT_DOMAIN}}/static/js/piles.dropper.js"></script>
        <!-- End scripts -->
    </body>
</html>