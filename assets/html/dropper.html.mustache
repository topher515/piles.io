<html>
<head>
    {{#settings}}
    <link rel="stylesheet" type="text/css" href="http://{{STATIC_DOMAIN}}/css/bootstrap.min.css" />
    {{/settings}}
    <style>
    body {
        margin:5px;
        padding:0;
    }
    #info {
        position:relative;
        display:none;
        overflow:hidden;
    }
    #dropper {
        position:relative;
        min-height:150px;
        overflow:hidden;
    }
    
    </style>
    
</head>
<body>
    
    <div id="content">
        <table id="info" class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Name</th><th>Type</th><th>Size</th><th>Progress</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <div id="dropper" class="alert alert-info">
            <h3>Drag your files here...</h3>
            <form>
                <p>...or click to upload.</p>
                <input type="file" />
            </form>
        </div>
    </div>
    
    <!-- Scripts -->
    {{#settings}}
    <script src="http://{{STATIC_DOMAIN}}/js/jquery-1.7.1.min.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/jquery-ui.min.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/bootstrap.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/jquery.fileupload.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/underscore.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/backbone.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/xdfile.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/easyXDM.js"></script>
    <script src="http://{{STATIC_DOMAIN}}/js/shinybox.dropper.js"></script>
    <script>
    (function() {
        _.extend(XDFile.Settings, {
		  APP_URL:'{{ APP_URL }}',
		  FILE_UPLOAD_URL:'{{ FILE_UPLOAD_URL }}',
          AWS_ACCESS_KEY_ID:'{{AWS_ACCESS_KEY_ID}}',
          STATIC_BUCKET_ACL:'{{STATIC_BUCKET_ACL}}'
          })
        _.extend(ShinyBox.Settings, {
		  APP_URL:'{{ APP_URL }}',
          APP_DOMAIN:'{{APP_DOMAIN}}',
          STATIC_DOMAIN:'{{STATIC_DOMAIN}}',
        })
        ShinyBox.xdmBootstrap()
		
    })()
    </script>
    {{/settings}}
    <!-- End Script -->
</body>
</html>